{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: install",
			"type": "npm",
			"script": "install",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "npm: watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "npm: build",
			"type": "npm",
			"script": "build",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "terraform: apply",
			"type": "shell",
			"command": "terraform",
			"args": ["apply"],
			"problemMatcher": []
		},
		{
			"label": "aws: sync",
			"type": "shell",
			"command": "aws",
			"args": ["s3", "sync", "./client/dist", "s3://goonsackgames.com", "--exclude", "*/raw/*"],
			"problemMatcher": []
		}
	]
}
